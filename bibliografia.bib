@Article{Espitia2024,
AUTHOR = {Espitia, John Javier and Velázquez, Fabián Andrés and Rodriguez, Jader and Gomez, Luisa and Baeza, Esteban and Aguilar-Rodríguez, Cruz Ernesto and Flores-Velazquez, Jorge and Villagran, Edwin},
TITLE = {Solar Energy Applications in Protected Agriculture: A Technical and Bibliometric Review of Greenhouse Systems and Solar Technologies},
