@article{Huang2024, title={Application of Machine Learning-Based K-means Clustering for Financial Fraud Detection}, volume={10}, url={https://drpress.org/ojs/index.php/ajst/article/view/19142}, DOI={10.54097/74414c90}, abstractNote={
